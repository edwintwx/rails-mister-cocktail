<div class="row d-flex justify-content-between align-items-center">
  <div class="col-9"><h1>All Cocktails</h1></div>
  <div class="col-3"><%= link_to "Add New Cocktail", new_cocktail_path, class: "btn btn-primary" %></div>
</div>
<div class="row d-flex justify-content-around">
  <% @cocktails.each do |c| %>
  <div class="col-3">
    <div class="card mt-5" style="width: 18rem;">
      <img class="card-img-top" src="https://source.unsplash.com/600x400/?cocktail&<%= c.name %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= link_to c.name, cocktail_path(c) %></h5>
        <p class="card-text">
          <h6>Ingredients</h6>
          <ul class="list-unstyled">
            <% c.doses.each do |d| %>
            <li><%= d.description %> of <%= d.ingredient.name %></li>
            <% end %>
          </ul>

        </p>
        <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
      </div>
    </div>
  </div>
  <% end %>
</div>


